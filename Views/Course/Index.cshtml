@model IEnumerable<Course>


    <h1>Courses</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-secondary"><i class="fa-solid fa-plus"></i> Create New</a>
    </p>
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Lecturer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Credit)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model) {
            <tr>
                <td>
                    @if (course.Lecturer != null)
                    {
                    @course.Lecturer
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => course.Credit)
                </td>
                <td>
                    <div class="button-group" role="group">
                        <a class="custom-btn edit-btn" asp-action="Edit" asp-route-id="@course.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="custom-btn details-btn" asp-action="Details" asp-route-id="@course.Id">
                            <i class="fa fa-info-circle"></i> Details
                        </a>
                        <button data-id="@course.Id" class="custom-btn deleteBtn" type="button">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
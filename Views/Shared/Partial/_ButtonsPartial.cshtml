<div class="button-group" role="group">
    <a class="custom-btn edit-btn" asp-action="Edit" asp-route-id="@Model.Id">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a class="custom-btn details-btn" asp-action="Details" asp-route-id="@Model.Id">
        <i class="fa fa-info-circle"></i> Details
    </a>
    <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
        <input type="hidden" name="id" value="@Model.Id" />
        <button class="custom-btn deleteBtn" type="submit">
            <i class="fa fa-trash"></i> Delete
        </button>
    </form>
</div>

<script>
    function confirmDelete() {
        return confirm('Are you sure you want to delete this?');
    }
</script>
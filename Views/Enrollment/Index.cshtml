@model IEnumerable<Enrollment>


    <h1>Enrollments</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-secondary"><i class="fa-solid fa-plus"></i> Create New</a>
    </p>
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model) {
            <tr>
                <td>
                    @if (enrollment.Student != null)
                    {
                    @enrollment.Student
                    }
                </td>
                <td>
                    @if (enrollment.Course != null)
                    {
                    @enrollment.Course
                    }
                </td>

                <td>
                    <div class="button-group" role="group">
                        <a class="custom-btn edit-btn" asp-action="Edit" asp-route-id="@enrollment.Id">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a class="custom-btn details-btn" asp-action="Details" asp-route-id="@enrollment.Id">
                            <i class="fa fa-info-circle"></i> Details
                        </a>
                        <button data-id="@enrollment.Id" class="custom-btn deleteBtn" type="button">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>
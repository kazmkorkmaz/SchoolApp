@model IEnumerable<Enrollment>


    <h1>Enrollments</h1>

    <p class="text-end">
        <a asp-action="Create" class="btn btn-secondary"><i class="fa-solid fa-plus"></i> Create New</a>
    </p>
    <table class="table table-hover table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Student)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var enrollment in Model) {
            <tr>
                <td>
                    @if (enrollment.Student != null)
                    {
                    @enrollment.Student
                    }
                </td>
                <td>
                    @if (enrollment.Course != null)
                    {
                    @enrollment.Course
                    }
                </td>
                <td>
                    @await Html.PartialAsync("~/Views/Shared/Partial/_ButtonsPartial.cshtml", enrollment)
                </td>
            </tr>
            }
        </tbody>
    </table>
@model Lecturer

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="row">
                <div class="col-md-6">
                    <h1>@Model.FirstName @Model.LastName</h1>
                </div>
                <div class="col-md-6">
                    <p class="text-md-end">
                        <a class="btn btn-secondary" asp-action="Index"><i class="fa fa-arrow-left"></i> Back to
                            List</a>
                    </p>
                </div>
                <hr>
            </div>
            <div class="row">
                <table class="table table-hover table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Courses)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model.Courses) {
                        <tr>
                            <td>
                                @course
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>